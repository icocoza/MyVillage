<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout android:layout_width="1dp" android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1" android:orientation="vertical">
            <TextView android:id="@+id/tvStatus"
                android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp"
                android:textSize="12sp" android:textColor="#ff0000ff"
                android:text="NEW"/>
            <TextView android:id="@+id/tvTitle"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                android:textSize="16sp" android:textStyle="bold" android:textColor="#ff000000"
                android:text="Title, 타이틀입니다"/>
            <TextView android:id="@+id/tvContent"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="10sp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                android:textSize="13sp" android:textColor="#ff808080"
                android:text="Title, 숏컷 내용입니다."/>
            <LinearLayout android:id="@+id/layoutScrap" android:visibility="gone"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:padding="1px" android:background="#808080">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#d3d3d3">
                        <ImageView android:id="@+id/ivScrap"
                            android:layout_width="80dp" android:layout_height="80dp"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/round_voicemail_black_48dp"/>
                        <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical"
                            android:layout_marginLeft="15dp" android:layout_gravity="center_vertical">
                            <TextView android:id="@+id/tvScrapTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp" android:text="타이틀 입니다." android:textColor="#000000"/>
                            <TextView android:id="@+id/tvScrapSubtitle"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:textSize="12sp" android:text="서브 타이틀 입니다." android:textColor="#000000"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView android:id="@+id/tvId"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginTop="20dp" android:layout_marginBottom="15dp"
                android:textSize="12sp" android:textColor="#181818"
                android:text="stephen"/>
        </LinearLayout>
        <ImageView android:id="@+id/ivCrop"
            android:layout_width="80dp" android:visibility="gone"
            android:layout_height="80dp" android:layout_gravity="center_vertical" android:layout_marginRight="15dp"/>
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1px" android:background="#3f000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_margin="10dp"
        android:orientation="horizontal"  android:gravity="center_vertical">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp" android:layout_marginLeft="5dp" android:alpha="0.5"
            android:src="@mipmap/twotone_visibility_black_18dp"/>
        <TextView android:id="@+id/tvWatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginLeft="5dp"
            android:textSize="12sp" android:textColor="#404040"
            android:text="99+"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp" android:layout_marginLeft="10dp" android:alpha="0.5"
            android:src="@mipmap/twotone_thumb_up_black_18dp"/>
        <TextView android:id="@+id/tvLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginLeft="5dp"
            android:textSize="12sp" android:textColor="#404040"
            android:text="12"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp" android:layout_marginLeft="10dp" android:alpha="0.5"
            android:src="@mipmap/twotone_thumb_down_black_18dp"/>
        <TextView android:id="@+id/tvDislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginLeft="5dp"
            android:textSize="12sp" android:textColor="#404040"
            android:text="5"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp" android:layout_marginLeft="10dp" android:alpha="0.5"
            android:src="@mipmap/twotone_sms_black_18dp"/>
        <TextView android:id="@+id/tvReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginLeft="5dp"
            android:textSize="12sp" android:textColor="#404040"
            android:text="댓글"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp" android:layout_weight="1"/>
        <TextView android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginRight="20sp"
            android:textSize="12sp"
            android:text="5분"/>
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="1px" android:background="#3f000000"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" android:background="#7fcccccc"/>

</LinearLayout>
