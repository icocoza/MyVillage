<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:padding="1px" android:background="#808080">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#e3e3e3"
        android:orientation="vertical">
        <ImageView android:id="@+id/ivScrap"
            android:layout_width="match_parent" android:layout_height="125dp"
            android:src="@mipmap/round_voicemail_black_48dp"/>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical"
            android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_gravity="center_vertical">
            <TextView android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="12sp" android:text="서브 타이틀 입니다." android:textColor="#000000"/>
            <TextView android:id="@+id/tvTitle"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="14sp" android:text="타이틀 입니다." android:textColor="#000000"/>
        </LinearLayout>
        <TextView android:id="@+id/tvBody"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="10dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:paddingBottom="10dp"
            android:background="#ffffff"
            android:textSize="12sp" android:text="내용 입니다." android:textColor="#3d3d3d"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
