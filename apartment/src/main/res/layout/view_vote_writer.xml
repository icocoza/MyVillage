<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp" android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="1"
        android:gravity="center_vertical" android:orientation="horizontal">
        <EditText android:id="@+id/edtVoteText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp" android:hint="@string/input_vote_text" android:layout_marginLeft="10dp"/>
        <ImageView android:id="@+id/ivDelete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/round_clear_black_48dp" android:layout_marginLeft="5dp" android:layout_marginRight="10dp"/>
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="1px" android:background="#3f000000"/>
</LinearLayout>
